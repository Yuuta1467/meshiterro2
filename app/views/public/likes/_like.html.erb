    <% if Like.find_by(user_id: current_user.id, post_id: @post_image.id, post_comment_id: post_comment.id) %>
        <%= link_to post_image_post_comment_likes_path(@post_image, post_comment), {class: "like-link", method: :delete, remote: true } do %>
          <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
          <%= post_comment.likes.count %>いいね
        <% end %>

    <% else %>
        <%= link_to post_image_post_comment_likes_path(@post_image, post_comment), {class: "like-link", method: :post, remote: true } do %>
          <i class="fas fa-heart" aria-hidden="true"></i>
          <%= post_comment.likes.count %> いいね
        <% end %>

    <% end %>