      <% if admin_signed_in? %>
        <%= link_to admin_users_path ,class: 'btn btn-light text-success' do %>
          <i class="fas fa-users"></i> 会員一覧
        <% end %>

        <%= link_to admin_tags_path ,class: 'btn btn-light text-success' do %>
          <i class="fas fa-tags"></i> タグ一覧
        <% end %>

        <%= link_to destroy_admin_session_path, method: :delete, class: 'btn btn-light text-success' do %>
