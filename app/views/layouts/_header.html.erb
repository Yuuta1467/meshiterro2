        <% end %>

      <% elsif user_signed_in? %>

        <%= link_to post_images_path,class: 'btn btn-light text-success' do %>
          <i class="fas fa-list-alt"></i> 投稿一覧
        <% end %>

        <%= link_to new_post_image_path,class: 'btn btn-light text-success' do  %>
          <i class="fas fa-pencil-alt"></i> 新規投稿
        <% end %>

